</head>

<body dir="rtl" class="bg-dark text-light">
    <nav class="navbar navbar-light bg-warning">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img width="100" src="/images/Coding With MO_logo.png" alt="LOGO">
            </a>
        </div>
    </nav>
    <form method="post" action="/abc/update">
        <div class="mb-3 w-75 mx-auto">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" id="name" value="<%= detailsStudent.name %>"
                aria-describedby="emailHelp">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1"
                value="<%= detailsStudent.email %>" aria-describedby="emailHelp">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" class="form-control" id="country" value="<%= detailsStudent.country %>"
                aria-describedby="emailHelp">
            <label for="telephone" class="form-label">telephone</label>
            <input dir="rtl" type="tel" name="telephone" class="form-control" id="telephone"
                value="<%= detailsStudent.telephone %>" aria-describedby="emailHelp">
            <label for="status" class="form-label">status</label>
            <input type="text" name="status" class="form-control" id="status" value="<%= detailsStudent.status %>"
                aria-describedby="emailHelp">
            <button type="submit" class="btn btn-primary mt-5">update</button>

        </div>

    </form>
    <form class="text-center" action="/update/dailyupdate" method="post">
        <input type="hidden" name="seeID" value="<%= detailsStudent._id %>">
        <button type="submit" class="btn btn-primary mt-5">edite daily page</button>
    </form>





